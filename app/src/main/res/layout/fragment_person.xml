<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gz.rentapp.fragment.PersonFragment">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/user_info"
            android:layout_width="match_parent"
            android:layout_height="560px">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar"
                android:layout_width="360px"
                android:layout_height="360px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="56px"
                android:src="@mipmap/bg_tou"
                app:actualImageScaleType="centerCrop"
                app:placeholderImage="@drawable/ic_launcher"
                app:roundAsCircle="true" />

            <TextView
                android:id="@+id/username"
                android:layout_width="360px"
                android:layout_height="120px"
                android:layout_below="@+id/avatar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="56px"
                android:gravity="center"
                android:text="登录/注册"
                android:textSize="58px" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/p1"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_below="@+id/user_info">

            <TextView
                android:id="@+id/tv_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="56px"
                android:text="租车记录"
                android:textColor="@color/gray_text"
                android:textSize="54px" />

            <ImageView
                android:id="@+id/iv_car"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="56px"
                android:src="@mipmap/ic_collection_next_normal" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/p2"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_below="@+id/p1"
            android:layout_marginTop="48px">

            <TextView
                android:id="@+id/tv_trip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="56px"
                android:text="旅游记录"
                android:textColor="@color/gray_text"
                android:textSize="54px" />

            <ImageView
                android:id="@+id/iv_trip"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="56px"
                android:src="@mipmap/ic_collection_next_normal" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/p3"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_below="@+id/p2"
            android:layout_marginTop="48px">

            <TextView
                android:id="@+id/tv_re_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="56px"
                android:text="待租车记录"
                android:textColor="@color/gray_text"
                android:textSize="54px" />

            <ImageView
                android:id="@+id/iv_re_car"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="56px"
                android:src="@mipmap/ic_collection_next_normal" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/p4"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_below="@+id/p3"
            android:layout_marginTop="48px">

            <TextView
                android:id="@+id/tv_re_trip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="56px"
                android:text="待旅游记录"
                android:textColor="@color/gray_text"
                android:textSize="54px" />

            <ImageView
                android:id="@+id/iv_re_trip"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="56px"
                android:src="@mipmap/ic_collection_next_normal" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/p5"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_below="@+id/p4"
            android:layout_marginTop="48px">

            <TextView
                android:id="@+id/tv_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="56px"
                android:text="个人设置"
                android:textColor="@color/gray_text"
                android:textSize="54px" />

            <ImageView
                android:id="@+id/iv_settings"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="56px"
                android:src="@mipmap/ic_collection_next_normal" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/p6"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_below="@+id/p5"
            android:layout_marginTop="48px">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_phone"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="56px"
                android:text="电话客服"
                android:textColor="@color/gray_text"
                android:textSize="54px" />

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="56px"
                android:src="@mipmap/ic_collection_next_normal" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</ScrollView>
