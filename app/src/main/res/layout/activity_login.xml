<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_personal">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="260px"
        android:layout_height="260px"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96px"
        android:layout_marginTop="260px"
        android:src="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_below="@+id/avatar"
        android:layout_marginLeft="48px"
        android:layout_marginRight="48px"
        android:layout_marginTop="48px"
        android:background="@mipmap/bg_white"
        android:drawableLeft="@mipmap/ic_mine_normal_dark"
        android:hint="  手机号码"
        android:paddingLeft="40px" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_below="@+id/username"
        android:layout_marginBottom="48px"
        android:layout_marginLeft="48px"
        android:layout_marginRight="48px"
        android:layout_marginTop="48px"
        android:background="#8028ff28"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="58px" />

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/login"
        android:layout_margin="48px"
        android:text="注册" />

    <TextView
        android:id="@+id/other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48px"
        android:text="其他登录方式"
        android:textColor="#60000000"
        android:textSize="54px" />

    <View
        android:layout_width="300px"
        android:layout_height="2dp"
        android:layout_below="@+id/register"
        android:layout_marginRight="48px"
        android:layout_marginTop="75px"
        android:layout_toLeftOf="@+id/other"
        android:background="#30000000" />

    <View
        android:layout_width="300px"
        android:layout_height="2dp"
        android:layout_below="@+id/register"
        android:layout_marginLeft="48px"
        android:layout_marginTop="75px"
        android:layout_toRightOf="@+id/other"
        android:background="#30000000" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/resignGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/other"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/qq"
            android:layout_width="110px"
            android:layout_height="110px"
            android:layout_marginLeft="48px"
            android:layout_marginRight="48px"
            android:layout_weight="1"
            android:src="@mipmap/logo_qq" />

        <ImageView
            android:id="@+id/wechat"
            android:layout_width="110px"
            android:layout_height="110px"
            android:layout_marginRight="48px"
            android:layout_weight="1"
            android:src="@mipmap/logo_wechat" />

        <ImageView
            android:id="@+id/sinaweibo"
            android:layout_width="110px"
            android:layout_height="110px"
            android:layout_marginRight="48px"
            android:layout_weight="1"
            android:src="@mipmap/logo_sinaweibo" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
